{
	"name": "JMeter and Nginx Dev Container",
	"image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
	"features": {
	  "ghcr.io/devcontainers-extra/features/jmeter-sdkman:2": {
		"version": "latest",
		"jdkVersion": "17",
		"jdkDistro": "oracle"
	  }
	},
	"postCreateCommand": [
	  "sudo DEBIAN_FRONTEND=noninteractive apt-get update",
	  "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y nginx"
	],
	"forwardPorts": [80],
	"mounts": [
	  "source=${workspaceFolder}/nginx.conf,target=/etc/nginx/nginx.conf,type=bind"
	],
	"runArgs": [
	  "--cap-add=SYS_ADMIN",
	  "--privileged"
	],
	"postStartCommand": "nginx -g 'daemon off;'"
  }
  